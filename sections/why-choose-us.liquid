<section class="why-choose-section">
  <div class="page-width">
    <div class="main-head why-choose-head">
      <h2 data-aos="fade-zoom-in"
     data-aos-delay="300"
     data-aos-offset="0">{{ section.settings.heading }}</h2>
      <p data-aos="fade-zoom-out"
     data-aos-delay="400"
     data-aos-offset="0">{{ section.settings.subtext }}</p>
    </div>

 <div class="main_stat_wrap">
  {% for block in section.blocks %}
    {% assign delays = "300,400,500" | split: "," %}
    {% assign delay = delays[forloop.index0] %}

    <div class="feature inner_stats_new" data-aos="fade-in-right" data-aos-delay="{{ delay }}">
      {% if block.settings.icon %}
        <div class="box_icon">
          <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="Icon" width="80" height="auto" />
        </div>
      {% endif %}
      <h3>{{ block.settings.title }}</h3>
      <p>{{ block.settings.text }}</p>
    </div>
  {% endfor %}
</div>

  </div>
</section>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Why Choose Us?"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "We make the process seamless and exciting from start to finish."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Custom"
    }
  ]
}
{% endschema %}
